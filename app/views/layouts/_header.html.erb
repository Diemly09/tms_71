<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path, id: "head" %></li>
        <% if logged_in? %>
          <% if current_user.supervisor? %>
            <li><%= link_to t(".course"), supervisors_courses_path, id: "head" %></li>
            <li><%= link_to t(".subject"), supervisors_subjects_path,
              id: "head" %></li>
            <li><%= link_to t(".trainee"), supervisors_users_path,
              id: "head" %></li>
          <% else %>
            <li><%= link_to t(".course"), user_courses_path, id: "head" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "acount" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path, id: "head" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
