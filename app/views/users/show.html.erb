<% provide :title, t("user.my_profile") %>
<h1><%= t "user.my_profile" %></h1>
<div class="col-md-4 col-md-offset-1">
  <h3><%= @user.name %></h3></br>
  <b><%= t "email" %></b><%= @user.email %></br>
</div>

<div class="col-md-5">
  <h3><span class="label label-primary">Course:</span></h3>
  <% if current_user.courses.nil? %>
    <%= t "user.no_course"  %>
  <% else %>
    <ul>
      <%= render @courses %>
    </ul>
  <% end %>
</div>
