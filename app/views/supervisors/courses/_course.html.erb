<li class="col-xs-12">
  <div class="col-xs-12">
    <h3><%= link_to course.name, supervisors_course_path(course) %></h3>
  </div>
  <div class="col-xs-12">
    <div class="col-xs-9 break">
      <%= course.description %>
    </div>
    <div class="col-xs-3 listButton">
      <%= link_to t("supervisors.course.edit"), edit_supervisors_course_path(course),
        class: "btn btn-success" %>
      <%= link_to t("supervisors.course.delete"), supervisors_course_path(course),
        method: :delete, data: {confirm: t("confirm")},
        class: "btn btn-danger" %>
    </div>
  </div>
</li>
