<li class="col-xs-12">
  <div class="subject col-xs-12">
    <h3><%= link_to subject.name, supervisors_subject_path(subject) %></h3>
  </div>
  <div class="col-xs-12">
    <div class="col-xs-9 break">
      <%= subject.description %>
    </div>
    <div class="col-xs-3 listButton">
      <%= link_to t(".edit_subject"), edit_supervisors_subject_path(subject),
        class: "btn btn-success" %>
      <%= link_to t(".delete_subject"), supervisors_subject_path(subject),
        method: :delete, data: {confirm: t("confirm")},
        class: "btn btn-danger" %>
    </div>
  </div>
</li>
